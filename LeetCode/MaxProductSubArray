class Solution:
    def maxProduct(self, arr: List[int]) -> int:
        n = len(arr)

        mx = arr[0]
        mn = arr[0]
        ans = arr[0]

        for i in range(1, n):
            element = arr[i]
            c1 = element
            c2 = element*mn
            c3 = element*mx
            mx = max(c1,c2,c3)
            mn = min(c1,c2,c3)
            ans = max(ans, mx)
        return ans
